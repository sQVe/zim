#  ┏━┓╻┏
#  ┣━┫┣┻┓
#  ╹ ╹╹ ╹

# Kill one or multiple running processes.

local pid
if [[ "$UID" != "0" ]]; then
    pid=$(ps -f -u $UID | sed 1d | fzf --query="$1" --multi --select-1 --exit-0 | awk '{print $2}')
else
    pid=$(ps -ef | sed 1d | fzf --query="$1" --multi --select-1 --exit-0 | awk '{print $2}')
fi

if [[ "x$pid" != "x" ]]; then
  echo $pid | xargs kill -${1:-9}
fi
