#  ┣━┫
#  ╹ ╹

# Open one or multiple files or directories in
# Vim with current PWD as source.

local files
IFS=$'\n' files=($(fd ${1:-.} -t f | fzf --query="$1" --preview '(highlight -l -O truecolor -s dracula --stdout {} 2> /dev/null || cat {} || tree -C -L 1 --dirsfirst {}) 2> /dev/null | head -200' --multi --select-1 --exit-0))

if [[ -n "$files" ]]; then
  nvim-pwd "${files[@]}"
fi
