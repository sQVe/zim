# Copy a password from LastPass CLI.

local name
name=$(fd --extension gpg . $PASSWORD_STORE_DIR | sed "s#$PASSWORD_STORE_DIR/##" | sed s/\.gpg$// | fzf --query="$1" --select-1 --exit-0 | awk '{print $(NF)}')

if [[ -n "$name" ]]; then
  pass show --clip "$name"
else
  echo "No password found."
fi

