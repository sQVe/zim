# Copy a password from LastPass CLI.

local name
name=$(lpass ls | ag -o '\S+\/{1}\S+(?!\[)' | fzf --query="$1" --select-1 --exit-0 | awk '{print $(NF)}' | sed 's/\]//g')

if [[ -n "$name" ]]; then
  lpass show -c --password "$name"
  echo "Copied password for: $name"
fi


